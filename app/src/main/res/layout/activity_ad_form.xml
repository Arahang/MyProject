<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anna.myproject.AdFormActivity">


    <EditText
        android:id="@+id/title_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add your title for the ad"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/category_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a category"
        android:layout_below="@id/title_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="70dp"
        />

    <EditText
        android:id="@+id/description_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:layout_below="@+id/category_textView"
        android:layout_margin="4dp"/>

    <EditText
        android:id="@+id/location_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:layout_below="@+id/description_editText"
        android:layout_margin="4dp"/>

    <EditText
        android:id="@+id/name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name"
        android:layout_below="@+id/location_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"/>

    <EditText
        android:id="@+id/phoneNo_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:hint="Phone Number"
        android:layout_below="@+id/name_editText"
        android:layout_margin="4dp"/>


    <TextView
        android:id="@+id/add_image_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add pictures of the item"
        android:textSize="15sp"
        android:layout_below="@+id/phoneNo_editText"
        android:layout_margin="4dp"/>


    <Button
        android:id="@+id/upload_button"
        android:text="Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNo_editText"
        android:layout_toRightOf="@id/add_image_textView"
        android:layout_margin="4dp"/>

    <ImageButton
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_camera"
        android:background="#FF9800"
        android:layout_below="@id/phoneNo_editText"
        android:layout_toRightOf="@id/upload_button"
        android:layout_margin="4dp"/>

    <ImageView
        android:id="@+id/camera_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/add_image_textView"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/post_ad_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST AD"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
